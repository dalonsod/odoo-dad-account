<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field
                name="name"
            >res.config.settings.view.form.inherit.account (in account_copy_incremental)</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']" position="inside">
                    <h2>Accounts</h2>
                    <div class="row mt16 o_settings_container" name="account-accounts">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Account Copy Increment</span>
                                <div class="text-muted">
                                    This value applies to duplicate operations, when suggesting a new code
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label
                                            for="account_copy_increment"
                                            string="Increment"
                                            class="col-3 col-lg-3 o_light_label"
                                        />
                                        <field
                                            name="account_copy_increment"
                                            class="oe_inline"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
